<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content" >        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="104dp"            android:background="#000000"            android:padding="12dp">            <ImageView                android:id="@+id/imageView2"                android:layout_width="88dp"                android:layout_height="56dp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintVertical_bias="0.105"                app:srcCompat="@drawable/sucsess" />            <TextView                android:id="@+id/textView4"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Sucsess"                android:textColor="#FFFFFF"                android:textSize="18sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent"                app:layout_constraintVertical_bias="1.0" />        </androidx.constraintlayout.widget.ConstraintLayout>    </androidx.cardview.widget.CardView></LinearLayout>